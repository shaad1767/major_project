<% layout("/layouts/boilerplate" ) %>

<div class="row mt-3">
    <h1 class= "col-6 offset-3">Signup on wanderlust</h1>
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" class="need-validation" novalidate>
            
            <div class="mb-3">
        <label for="username" class="form-label">username</label>
        <input 
            name = "username"
            id="username"
            type="text"
            class="form-control"  
            required
         />
         <div class="valid-feedback">Looks good!   
         </div>
     
    </div>
     <div class="mb-3">
    <label for="email" class="form-label">email</label>
    <input 
        name = "email"
        id="email"
        type="email"
        class="form-control"  
        required
         />
    </div>

     <div class="mb-3">
    <label for="password" class="form-label">password</label>
    <input 
        name = "password"
        id="password"
        type="pasword"
        class="form-control"  
        required
         />
    </div>

    <button class="btn btn-success">signup</button>

        </form>
    </div>
</div>    
    